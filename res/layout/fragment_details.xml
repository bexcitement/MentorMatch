<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    
     <TextView
         android:id="@+id/tvAboutMe"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_alignParentRight="true"
         android:layout_alignParentTop="true"
         android:layout_marginTop="41dp"
         android:gravity="center"
         android:text="@string/aboutMeHeader"
         android:textSize="22sp" />

     <EditText
         android:id="@+id/etAboutMe"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_below="@+id/tvAboutMe"
         android:layout_centerHorizontal="true"
         android:layout_marginTop="49dp"
         android:ems="10"
         android:hint="Tell me about yourself!"
         android:inputType="textMultiLine"
         android:maxLength="256" />

     <Button
         android:id="@+id/btnDetailsNext"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_below="@+id/etAboutMe"
         android:layout_centerHorizontal="true"
         android:layout_marginTop="66dp"
         android:text="Find a Mentor!" />

</RelativeLayout>
