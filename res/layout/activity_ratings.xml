<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".RatingsActivity" >

    <TextView
        android:id="@+id/tvHeading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="@string/ratings_heading" />

    <Button
        android:id="@+id/btnSave"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/etReview"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="@drawable/connectbtn"
        android:onClick="saveRating"
        android:text="Save"
        android:textColor="#fff" />

    <RatingBar
        android:id="@+id/rbRating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvHeading"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp" />

    <EditText
        android:id="@+id/etReview"
        android:layout_width="275dp"
        android:layout_height="175dp"
        android:layout_alignLeft="@+id/rbRating"
        android:layout_alignRight="@+id/rbRating"
        android:layout_below="@+id/rbRating"
        android:background="@drawable/editabout"
        android:ellipsize="start"
        android:ems="10"
        android:gravity="center"
        android:inputType="textMultiLine" />

    <TextView
        android:id="@+id/tvAddTaskLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tvHeading"
        android:layout_below="@+id/btnSave"
        android:layout_centerVertical="true"
        android:text="Add Task" />

    <EditText
        android:id="@+id/etTaskDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tvAddTaskLabel"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/tvAddTaskLabel"
        android:layout_marginTop="16dp"
        android:ems="10" >
    </EditText>

    <Button
        android:id="@+id/btnAddTask"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/etTaskDescription"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"
        android:onClick="onAddTask"
        android:text="Add Task" />

    <TextView
        android:id="@+id/tvName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/tvHeading"
        android:layout_toRightOf="@+id/tvHeading"
        android:text="Name" />

    <TextView
        android:id="@+id/tvHeading2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/tvHeading"
        android:layout_toRightOf="@+id/tvName"
        android:text="@string/ratings_heading2" />

</RelativeLayout>